<script>
document.addEventListener('DOMContentLoaded', function() {
    const dataSlider = document.getElementById('data-slider');
    const gbLabel = document.getElementById('gb-label');
    const priceSpan = document.getElementById('price');

    const voiceSlider = document.getElementById('mins-slider');
    const voiceLabel = document.getElementById('mins-label');
    const voicePriceSpan = document.getElementById('voice-price');

    const smsSlider = document.getElementById('texts-slider');
    const smsLabel = document.getElementById('texts-label');
    const smsPriceSpan = document.getElementById('sms-price');

    const totalPriceSpan = document.getElementById('total-price');

    const dataPrices = [40, 55, 85, 109, 149, 199, 259, 299, 379, 499, 699, 899];
    const voicePrices = [35, 60, 85, 110, 160, 200, 240, 280, 370, 430, 800];
    const smsPrices = [0, 25, 30, 40, 60, 80, 100, 200, 400];
    
    const dataAmountSpan = document.getElementById('data-amount');
    const voiceAmountSpan = document.getElementById('voice-amount');
    const smsAmountSpan = document.getElementById('sms-amount');
    
    function updateDataAmount() {
        const index = parseInt(dataSlider.value);
        dataAmountSpan.textContent = index === 0 ? '500 MB' : index + ' GB';
    }

    function updateVoiceAmount() {
        const index = parseInt(voiceSlider.value);
        voiceAmountSpan.textContent = index === 0 ? '50 Mins' : index * 100 + ' Mins';
    }

    function updateSMSAmount() {
        const index = parseInt(smsSlider.value);
        const smsTexts = [50, 100, 150, 200, 300, 400, 500, 1000, 2000];
        smsAmountSpan.textContent = smsTexts[index] + ' Texts';
    }

    dataSlider.addEventListener('input', function() {
        updateDataAmount();
        calculateTotalPrice();
    });

    voiceSlider.addEventListener('input', function() {
        updateVoiceAmount();
        calculateTotalPrice();
    });

    smsSlider.addEventListener('input', function() {
        updateSMSAmount();
        calculateTotalPrice();
    });

    // Initial update of amount labels
    updateDataAmount();
    updateVoiceAmount();
    updateSMSAmount();

    function calculateTotalPrice() {
        const dataIndex = parseInt(dataSlider.value);
        const voiceIndex = parseInt(voiceSlider.value);
        const smsIndex = parseInt(smsSlider.value);

        const dataPrice = dataPrices[dataIndex];
        const voicePrice = voicePrices[voiceIndex];
        const smsPrice = smsPrices[smsIndex];

        const totalPrice = dataPrice + voicePrice + smsPrice;
        totalPriceSpan.textContent = "R" + totalPrice;
    }

    dataSlider.addEventListener('input', function() {
        const index = parseInt(dataSlider.value);
        gbLabel.textContent = index === 0 ? '500 MB' : index + ' GB';
        priceSpan.textContent = dataPrices[index];
        calculateTotalPrice();
    });

    voiceSlider.addEventListener('input', function() {
        const index = parseInt(voiceSlider.value);
        voiceLabel.textContent = index === 0 ? '50 mins' : index * 100 + ' mins';
        voicePriceSpan.textContent = voicePrices[index];
        calculateTotalPrice();
    });

    smsSlider.addEventListener('input', function() {
        const index = parseInt(smsSlider.value);
        const smsTexts = [50, 100, 150, 200, 300, 400, 500, 1000, 2000];
        smsLabel.textContent = smsTexts[index] + ' Texts';
        smsPriceSpan.textContent = smsPrices[index];
        calculateTotalPrice();
    });

    calculateTotalPrice();

    // Update slider track color based on slider value
    function updateSliderTrackColor(slider) {
        const value = parseFloat(slider.value);
        const percentage = (value / parseFloat(slider.max)) * 100;

        const colorLeft = "#FC1049";
        const colorRight = "#FA84A1";

        const gradient = `linear-gradient(to right, ${colorLeft} 0%, ${colorLeft} ${percentage}%, ${colorRight} ${percentage}%, ${colorRight} 100%)`;

        slider.style.background = gradient;
    }

    dataSlider.addEventListener('input', function() {
        updateSliderTrackColor(dataSlider);
    });

    voiceSlider.addEventListener('input', function() {
        updateSliderTrackColor(voiceSlider);
    });

    smsSlider.addEventListener('input', function() {
        updateSliderTrackColor(smsSlider);
    });

});
</script>

</body>
